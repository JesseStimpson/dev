syntax enable
set encoding=utf-8
set showcmd
filetype plugin indent on
set title

set nowrap
set tabstop=4 shiftwidth=4
set expandtab
set backspace=indent,eol,start

set hlsearch
set incsearch
set ignorecase
set smartcase

set number
set ruler

nnoremap <C-J> <C-W><C-J>
nnoremap <C-K> <C-W><C-K>
nnoremap <C-L> <C-W><C-L>
nnoremap <C-H> <C-W><C-H>

map <up> <nop>
map <down> <nop>
map <left> <nop>
map <right> <nop>

